<h1>Detalle de Productos:</h1>
<br>
<%= image_tag @product.photo, width: 100 if @product.photo.attached?   %>
<h2 class="title">Nombre: <%= @product.title %> </h2>
<p class="description">Descripcion:  <%= @product.description%> </p>
<span class="price">Precio: <%= @product.price %> </span>

<%= link_to t('.edit'), edit_product_path(@product) if @product.owner? %>
<%= link_to t('.delete'), product_path(@product), data: {turbo_method: :delete, turbo_confirm: t('common.confirm')} if @product.owner? %>
<%= link_to t('.view_more_products', username: @product.user.username), user_path(@product.user.username) %>


<h1>Detalle de Productos:</h1>
<%= image_tag @product.photo, width: 100 if @product.photo.attached?   %>
<h2 class="title">Nombre: <%= @product.title %> </h2>
<p class="description">Descripcion:  <%= @product.description%> </p>
<span class="price">Precio: <%= @product.price %> </span>

<%= link_to "Editar", edit_product_path(@product) %>
<%= link_to "eliminar", product_path(@product), data: {turbo_method: :delete, turbo_confirm: 'Estas seguro de eliminar?'}%>


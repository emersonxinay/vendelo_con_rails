<%= link_to product_path(product), class: 'product bg-white mb-2 rounded sm:w-[calc(33.3333%_-_.5rem)] lg:w-[calc(25%_-_.5rem)]', 'data-turbo-frame': '_top' do %>
  <%= image_tag product.photo.attached? ? product.photo : 'caja.png', class: "w-full h-60 object-cover"  %>
  <div class="m-2">
  <span class="font-bold text-xl" > $ <%= product.price%> </span>
  <h2 class="" > <%= product.title%> </h2>
  <p  class="text-gray-500 text-sm mt-2"> <%= product.description%> </p>
  </div>
<%end%>